<div class="span4">
  <li id="<%= graph.id %>">
    <h3 style="padding:7px;"><%= link_to graph.name, graph %></h3>
    <span class="graphimage">
      <% if graph.image.nil? %>
        <%= image_tag "rendering_graph.gif" %>
      <% else %>
        <%= image_tag(graph.image + ".thumb.png") %>
      <% end %>
    </span>
    <%= link_to gravatar_for(graph.user), graph.user %> 
    <span class="user">
      <%= link_to graph.user.name, graph.user %> 
    </span>
    <br/>
    <span class="content"><%= graph.description %></span> 
    <span class="timestamp">
      Posted <%= time_ago_in_words(graph.created_at) %> ago. 
    </span>
    <% if current_user?(graph.user) %>
      <%= link_to "delete", graph, method: :delete,
                                       confirm: "You sure?",
                                       title: graph.description %>
    <% end %>
  </li>
</div>